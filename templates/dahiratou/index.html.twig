{% extends 'base.html.twig' %}

{% block title %}Dahira{% endblock %}

{% block body %}
    <div class="container">
        <br>
        <div class="row">
            {% for dahira in dahiras %}
                <div class="col-lg-4 col-sm-6 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="card-title">{{ dahira.nom }}</div>
                                <div class="card-text"><p> {{ dahira.adresse }}</p></div>
                                <div class="card-text"><p>{{ dahira.email }}</p></div>
                                <div class="card-text"><p>{{ dahira.telephone }}</p></div>
                            </div>

                        </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
