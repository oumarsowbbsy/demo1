{% extends 'base.html.twig' %}

{% block title %}Audio{% endblock %}

{% block body %}
<div class="container">
    <h1>Audio</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ audio.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ audio.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ audio.description }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ audio.imageName }}</td>
            </tr>
            <tr>
                <th>ImageSize</th>
                <td>{{ audio.imageSize }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ audio.updatedAt ? audio.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('audio_index') }}">back to list</a>

    <a href="{{ path('audio_edit', {'id': audio.id}) }}">edit</a>

    {{ include('audio/_delete_form.html.twig') }}
</div>
{% endblock %}
