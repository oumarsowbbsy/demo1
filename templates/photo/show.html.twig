{% extends 'base.html.twig' %}

{% block title %}Photo{% endblock %}

{% block body %}
    <div class="container">
    <h1>Photo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ photo.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ photo.name }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ photo.imageName }}</td>
            </tr>
            <tr>
                <th>ImageSize</th>
                <td>{{ photo.imageSize }}</td>
            </tr>
            <tr>
                <th>ImageSize</th>
                <td><img src="{{ vich_uploader_asset(photo, 'imageFile') }}" class="img-thumbnail"/></td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                {#<td>{{ photo.updatedAt ? photo.updatedAt|date('Y-m-d H:i:s') : '' }}</td>#}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('photo_index') }}">back to list</a>

    <a href="{{ path('photo_edit', {'id': photo.id}) }}">edit</a>

    {{ include('photo/_delete_form.html.twig') }}
    </div>
{% endblock %}
