{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="wrapper fadeInDown">
    <div id="formContent">
        <div class="fadeIn first">
            <img src="https://fondsmedinabaye.com/wp-content/uploads/2019/06/bayek-300x300.png" class="img-thumbnail" id="icon" alt="User Icon" style="width: 100px !important;" />
        </div>
<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="form-group">
        <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" required="required" autocomplete="username" placeholder="Username ou Email" />
    </div>

     <div class="form-group">
         <input type="password" id="password" name="_password" class="form-control" required="required" autocomplete="current-password" placeholder="Mot de passe" />
     </div>


    <div class="form-group">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>

    <input type="submit" id="_submit" name="_submit" class="btn btn-success btn-md" value="Se connecter" />
</form>
{#<div id="particles-js"></div>#}
    </div>
</div>